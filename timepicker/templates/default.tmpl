{{define "lvt:timepicker:default:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
<div class="relative inline-block" data-timepicker="{{.ID}}">
  <button
    type="button"
    class="w-full px-4 py-2 text-left bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
    lvt-click="toggle_{{.ID}}"
    aria-haspopup="dialog"
    aria-expanded="{{.Open}}"
  >
    <span class="flex items-center justify-between">
      <span class="{{if not .HasValue}}text-gray-400{{end}}">{{.DisplayValue}}</span>
      <svg class="w-5 h-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
      </svg>
    </span>
  </button>

  {{if .Open}}
  <div
    class="absolute z-10 mt-1 p-4 bg-white border border-gray-200 rounded-lg shadow-lg"
    lvt-click-away="close_{{.ID}}"
    role="dialog"
    aria-modal="true"
    aria-label="Choose time"
  >
    <div class="flex items-center justify-center gap-2">
      {{/* Hour */}}
      <div class="flex flex-col items-center">
        <button
          type="button"
          class="p-1 hover:bg-gray-100 rounded"
          lvt-click="inc_hour_{{.ID}}"
          aria-label="Increment hour"
        >
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <input
          type="text"
          class="w-12 text-center text-lg font-semibold border border-gray-300 rounded py-1"
          value="{{if .Use24Hour}}{{printf \"%02d\" .Hour}}{{else}}{{.Hour}}{{end}}"
          readonly
        />
        <button
          type="button"
          class="p-1 hover:bg-gray-100 rounded"
          lvt-click="dec_hour_{{.ID}}"
          aria-label="Decrement hour"
        >
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>

      <span class="text-lg font-semibold">:</span>

      {{/* Minute */}}
      <div class="flex flex-col items-center">
        <button
          type="button"
          class="p-1 hover:bg-gray-100 rounded"
          lvt-click="inc_minute_{{.ID}}"
          aria-label="Increment minute"
        >
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <input
          type="text"
          class="w-12 text-center text-lg font-semibold border border-gray-300 rounded py-1"
          value="{{printf \"%02d\" .Minute}}"
          readonly
        />
        <button
          type="button"
          class="p-1 hover:bg-gray-100 rounded"
          lvt-click="dec_minute_{{.ID}}"
          aria-label="Decrement minute"
        >
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>

      {{if .ShowSeconds}}
      <span class="text-lg font-semibold">:</span>
      {{/* Second */}}
      <div class="flex flex-col items-center">
        <button
          type="button"
          class="p-1 hover:bg-gray-100 rounded"
          lvt-click="inc_second_{{.ID}}"
          aria-label="Increment second"
        >
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <input
          type="text"
          class="w-12 text-center text-lg font-semibold border border-gray-300 rounded py-1"
          value="{{printf \"%02d\" .Second}}"
          readonly
        />
        <button
          type="button"
          class="p-1 hover:bg-gray-100 rounded"
          lvt-click="dec_second_{{.ID}}"
          aria-label="Decrement second"
        >
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
      {{end}}

      {{if not .Use24Hour}}
      {{/* AM/PM */}}
      <div class="flex flex-col items-center ml-2">
        <button
          type="button"
          class="px-2 py-1 text-sm font-medium rounded {{if eq .Period \"AM\"}}bg-blue-600 text-white{{else}}bg-gray-100 text-gray-700 hover:bg-gray-200{{end}}"
          lvt-click="set_period_{{.ID}}"
          lvt-data-period="AM"
        >
          AM
        </button>
        <button
          type="button"
          class="px-2 py-1 text-sm font-medium rounded mt-1 {{if eq .Period \"PM\"}}bg-blue-600 text-white{{else}}bg-gray-100 text-gray-700 hover:bg-gray-200{{end}}"
          lvt-click="set_period_{{.ID}}"
          lvt-data-period="PM"
        >
          PM
        </button>
      </div>
      {{end}}
    </div>

    <div class="flex justify-between mt-4 pt-4 border-t border-gray-200">
      <button
        type="button"
        class="text-sm text-blue-600 hover:text-blue-700"
        lvt-click="now_{{.ID}}"
      >
        Now
      </button>
      {{if .HasValue}}
      <button
        type="button"
        class="text-sm text-gray-500 hover:text-gray-700"
        lvt-click="clear_{{.ID}}"
      >
        Clear
      </button>
      {{end}}
    </div>
  </div>
  {{end}}
</div>
{{else}}
{{/* Unstyled semantic HTML version */}}
<div data-timepicker="{{.ID}}">
  <button
    type="button"
    lvt-click="toggle_{{.ID}}"
    aria-haspopup="dialog"
    aria-expanded="{{.Open}}"
  >
    {{.DisplayValue}}
  </button>

  {{if .Open}}
  <div lvt-click-away="close_{{.ID}}" role="dialog" aria-modal="true">
    <div>
      <label>Hour</label>
      <button type="button" lvt-click="inc_hour_{{.ID}}">+</button>
      <span>{{if .Use24Hour}}{{printf "%02d" .Hour}}{{else}}{{.Hour}}{{end}}</span>
      <button type="button" lvt-click="dec_hour_{{.ID}}">-</button>
    </div>
    <span>:</span>
    <div>
      <label>Minute</label>
      <button type="button" lvt-click="inc_minute_{{.ID}}">+</button>
      <span>{{printf "%02d" .Minute}}</span>
      <button type="button" lvt-click="dec_minute_{{.ID}}">-</button>
    </div>
    {{if .ShowSeconds}}
    <span>:</span>
    <div>
      <label>Second</label>
      <button type="button" lvt-click="inc_second_{{.ID}}">+</button>
      <span>{{printf "%02d" .Second}}</span>
      <button type="button" lvt-click="dec_second_{{.ID}}">-</button>
    </div>
    {{end}}
    {{if not .Use24Hour}}
    <div>
      <button type="button" lvt-click="set_period_{{.ID}}" lvt-data-period="AM">AM</button>
      <button type="button" lvt-click="set_period_{{.ID}}" lvt-data-period="PM">PM</button>
    </div>
    {{end}}
    <div>
      <button type="button" lvt-click="now_{{.ID}}">Now</button>
      {{if .HasValue}}
      <button type="button" lvt-click="clear_{{.ID}}">Clear</button>
      {{end}}
    </div>
  </div>
  {{end}}
</div>
{{end}}
{{end}}
