{{define "lvt:breadcrumbs:default:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
<nav class="flex {{.SizeClass}}" aria-label="Breadcrumb" data-breadcrumbs="{{.ID}}">
  <ol class="flex items-center space-x-2">
    {{/* Home icon */}}
    {{if .ShowHome}}
    <li class="flex items-center">
      <a href="{{.HomeHref}}" class="text-gray-500 hover:text-gray-700">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
        </svg>
        <span class="sr-only">Home</span>
      </a>
    </li>
    {{if .HasItems}}
    <li class="flex items-center">
      {{if .IsChevronSeparator}}
      <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      {{else}}
      <span class="text-gray-400 mx-1">{{.SeparatorSymbol}}</span>
      {{end}}
    </li>
    {{end}}
    {{end}}

    {{/* Items */}}
    {{if .IsCollapsed}}
    {{/* First item */}}
    {{with index .Items 0}}
    <li class="flex items-center">
      {{if .IsClickable}}
      <a href="{{.Href}}" class="{{.LinkClass}}">
        {{if .HasIcon}}<span class="mr-1">{{.Icon}}</span>{{end}}
        {{.Label}}
      </a>
      {{else}}
      <span class="{{.LinkClass}}" {{if .Current}}aria-current="page"{{end}}>
        {{if .HasIcon}}<span class="mr-1">{{.Icon}}</span>{{end}}
        {{.Label}}
      </span>
      {{end}}
    </li>
    {{end}}

    {{/* Ellipsis */}}
    <li class="flex items-center">
      {{if $.IsChevronSeparator}}
      <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      {{else}}
      <span class="text-gray-400 mx-1">{{$.SeparatorSymbol}}</span>
      {{end}}
    </li>
    <li class="flex items-center">
      <span class="text-gray-400">...</span>
    </li>

    {{/* Remaining visible items */}}
    {{$start := sub (len $.Items) (sub $.MaxVisible 1)}}
    {{range $idx, $item := slice $.Items $start}}
    <li class="flex items-center">
      {{if $.IsChevronSeparator}}
      <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      {{else}}
      <span class="text-gray-400 mx-1">{{$.SeparatorSymbol}}</span>
      {{end}}
    </li>
    <li class="flex items-center">
      {{if $item.IsClickable}}
      <a href="{{$item.Href}}" class="{{$item.LinkClass}}">
        {{if $item.HasIcon}}<span class="mr-1">{{$item.Icon}}</span>{{end}}
        {{$item.Label}}
      </a>
      {{else}}
      <span class="{{$item.LinkClass}}" {{if $item.Current}}aria-current="page"{{end}}>
        {{if $item.HasIcon}}<span class="mr-1">{{$item.Icon}}</span>{{end}}
        {{$item.Label}}
      </span>
      {{end}}
    </li>
    {{end}}
    {{else}}
    {{/* All items visible */}}
    {{range $idx, $item := .Items}}
    {{if gt $idx 0}}
    <li class="flex items-center">
      {{if $.IsChevronSeparator}}
      <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      {{else}}
      <span class="text-gray-400 mx-1">{{$.SeparatorSymbol}}</span>
      {{end}}
    </li>
    {{end}}
    <li class="flex items-center">
      {{if $item.IsClickable}}
      <a href="{{$item.Href}}" class="{{$item.LinkClass}}">
        {{if $item.HasIcon}}<span class="mr-1">{{$item.Icon}}</span>{{end}}
        {{$item.Label}}
      </a>
      {{else}}
      <span class="{{$item.LinkClass}}" {{if $item.Current}}aria-current="page"{{end}}>
        {{if $item.HasIcon}}<span class="mr-1">{{$item.Icon}}</span>{{end}}
        {{$item.Label}}
      </span>
      {{end}}
    </li>
    {{end}}
    {{end}}
  </ol>
</nav>
{{else}}
{{/* Unstyled semantic HTML version */}}
<nav aria-label="Breadcrumb" data-breadcrumbs="{{.ID}}">
  <ol class="breadcrumbs">
    {{if .ShowHome}}
    <li><a href="{{.HomeHref}}">Home</a></li>
    {{end}}
    {{range $item := .Items}}
    <li>
      {{if $item.IsClickable}}
      <a href="{{$item.Href}}">{{$item.Label}}</a>
      {{else}}
      <span {{if $item.Current}}aria-current="page"{{end}}>{{$item.Label}}</span>
      {{end}}
    </li>
    {{end}}
  </ol>
</nav>
{{end}}
{{end}}
