{{define "lvt:toggle:checkbox:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
<label
  class="inline-flex items-start gap-3 {{if .Disabled}}cursor-not-allowed opacity-60{{else}}cursor-pointer{{end}}"
  data-checkbox="{{.ID}}"
>
  {{/* Custom checkbox */}}
  <div class="relative flex items-center justify-center">
    <input
      type="checkbox"
      class="sr-only peer"
      {{if .Name}}name="{{.Name}}"{{end}}
      {{if .Checked}}checked{{end}}
      {{if .Disabled}}disabled{{end}}
      {{if .Required}}required{{end}}
      value="{{.Value}}"
      lvt-change="toggle_{{.ID}}"
    />
    <div
      class="w-5 h-5 rounded border-2 {{.CheckboxStateClass}} transition-colors flex items-center justify-center"
      lvt-click="toggle_{{.ID}}"
    >
      {{if .Checked}}
      <svg class="w-3 h-3 text-white" viewBox="0 0 12 12" fill="none">
        <path d="M2 6l3 3 5-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      {{else if .Indeterminate}}
      <svg class="w-3 h-3 text-white" viewBox="0 0 12 12" fill="none">
        <path d="M2 6h8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
      {{end}}
    </div>
  </div>

  {{if .HasLabel}}
  <div class="flex-1">
    <span class="text-sm font-medium text-gray-700">{{.Label}}</span>
    {{if .HasDescription}}
    <p class="text-sm text-gray-500">{{.Description}}</p>
    {{end}}
  </div>
  {{end}}
</label>
{{else}}
{{/* Unstyled semantic HTML version */}}
<label data-checkbox="{{.ID}}">
  <input
    type="checkbox"
    {{if .Name}}name="{{.Name}}"{{end}}
    {{if .Checked}}checked{{end}}
    {{if .Disabled}}disabled{{end}}
    {{if .Required}}required{{end}}
    value="{{.Value}}"
    lvt-change="toggle_{{.ID}}"
  />
  {{if .HasLabel}}<span>{{.Label}}</span>{{end}}
  {{if .HasDescription}}<small>{{.Description}}</small>{{end}}
</label>
{{end}}
{{end}}
