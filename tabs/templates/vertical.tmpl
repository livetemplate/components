{{define "lvt:tabs:vertical:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
<div class="w-64" data-tabs="{{.ID}}">
  <nav class="flex flex-col space-y-1" role="tablist" aria-orientation="vertical">
    {{range .Items}}
    <button
      type="button"
      class="flex items-center px-3 py-2 text-sm font-medium rounded-md {{if eq $.ActiveID .ID}}bg-blue-50 text-blue-700 border-l-4 border-blue-500{{else}}text-gray-600 hover:bg-gray-50 hover:text-gray-900{{end}} {{if .Disabled}}opacity-50 cursor-not-allowed{{end}}"
      lvt-click="select_tab_{{$.ID}}"
      lvt-data-tab="{{.ID}}"
      role="tab"
      aria-selected="{{if eq $.ActiveID .ID}}true{{else}}false{{end}}"
      {{if .Disabled}}disabled aria-disabled="true"{{end}}
    >
      {{if .Icon}}<span class="mr-3">{{.Icon}}</span>{{end}}
      <span class="flex-1 text-left">{{.Label}}</span>
      {{if .Badge}}<span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-600">{{.Badge}}</span>{{end}}
    </button>
    {{end}}
  </nav>
</div>
{{else}}
{{/* Unstyled semantic HTML version */}}
<div data-tabs="{{.ID}}">
  <nav role="tablist" aria-orientation="vertical">
    {{range .Items}}
    <button
      type="button"
      lvt-click="select_tab_{{$.ID}}"
      lvt-data-tab="{{.ID}}"
      role="tab"
      aria-selected="{{if eq $.ActiveID .ID}}true{{else}}false{{end}}"
      {{if .Disabled}}disabled aria-disabled="true"{{end}}
    >
      {{if .Icon}}<span>{{.Icon}}</span>{{end}}
      {{.Label}}
      {{if .Badge}}<span>{{.Badge}}</span>{{end}}
    </button>
    {{end}}
  </nav>
</div>
{{end}}
{{end}}
