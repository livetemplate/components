{{define "lvt:progress:spinner:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
<div class="inline-flex items-center" data-spinner="{{.ID}}" role="status" aria-label="{{.Label}}">
  <svg class="animate-spin {{.SizeClass}} {{.ColorClass}}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
  </svg>
  <span class="sr-only">{{.Label}}</span>
</div>
{{else}}
{{/* Unstyled semantic HTML version */}}
<div data-spinner="{{.ID}}" class="spinner" role="status" aria-label="{{.Label}}">
  <svg viewBox="0 0 24 24">
    <circle class="track" cx="12" cy="12" r="10" stroke-width="4" fill="none" />
    <path class="bar" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" />
  </svg>
  <span class="sr-only">{{.Label}}</span>
</div>
{{end}}
{{end}}
