{{define "lvt:tagsinput:default:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
<div class="relative" data-tagsinput="{{.ID}}">
  <div class="flex flex-wrap gap-2 p-2 border border-gray-300 rounded-md bg-white focus-within:ring-2 focus-within:ring-blue-500 focus-within:border-blue-500">
    {{range $i, $tag := .Tags}}
    <span class="inline-flex items-center gap-1 px-2 py-1 text-sm bg-blue-100 text-blue-800 rounded-md">
      {{if $tag.Label}}{{$tag.Label}}{{else}}{{$tag.Value}}{{end}}
      <button
        type="button"
        class="inline-flex items-center justify-center w-4 h-4 text-blue-600 hover:text-blue-800 hover:bg-blue-200 rounded-full"
        lvt-click="remove_tag_{{$.ID}}"
        lvt-data-value="{{$tag.Value}}"
        aria-label="Remove tag"
      >
        <svg class="w-3 h-3" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </span>
    {{end}}
    {{if .CanAddMore}}
    <input
      type="text"
      class="flex-1 min-w-[120px] outline-none bg-transparent text-sm"
      placeholder="{{.Placeholder}}"
      value="{{.Input}}"
      lvt-input="input_tag_{{.ID}}"
      lvt-keydown="keydown_tag_{{.ID}}"
      lvt-key="Enter,Backspace"
      lvt-focus="focus_tag_{{.ID}}"
      lvt-blur="blur_tag_{{.ID}}"
      autocomplete="off"
    />
    {{end}}
  </div>
  {{if and .ShowSuggestions .FilteredSuggestions}}
  <div class="absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-md shadow-lg max-h-48 overflow-auto">
    {{range .FilteredSuggestions}}
    <div
      class="px-3 py-2 text-sm cursor-pointer hover:bg-blue-50"
      lvt-click="select_suggestion_{{$.ID}}"
      lvt-data-value="{{.}}"
    >
      {{.}}
    </div>
    {{end}}
  </div>
  {{end}}
  {{if .MaxTags}}
  <p class="mt-1 text-xs text-gray-500">{{.Count}}/{{.MaxTags}} tags</p>
  {{end}}
</div>
{{else}}
{{/* Unstyled semantic HTML version */}}
<div data-tagsinput="{{.ID}}">
  <div>
    {{range .Tags}}
    <span>
      {{if .Label}}{{.Label}}{{else}}{{.Value}}{{end}}
      <button
        type="button"
        lvt-click="remove_tag_{{$.ID}}"
        lvt-data-value="{{.Value}}"
        aria-label="Remove tag"
      >
        &times;
      </button>
    </span>
    {{end}}
    {{if .CanAddMore}}
    <input
      type="text"
      placeholder="{{.Placeholder}}"
      value="{{.Input}}"
      lvt-input="input_tag_{{.ID}}"
      lvt-keydown="keydown_tag_{{.ID}}"
      lvt-key="Enter,Backspace"
      autocomplete="off"
    />
    {{end}}
  </div>
  {{if and .ShowSuggestions .FilteredSuggestions}}
  <ul>
    {{range .FilteredSuggestions}}
    <li
      lvt-click="select_suggestion_{{$.ID}}"
      lvt-data-value="{{.}}"
    >
      {{.}}
    </li>
    {{end}}
  </ul>
  {{end}}
</div>
{{end}}
{{end}}
