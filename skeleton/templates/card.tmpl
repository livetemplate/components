{{define "lvt:skeleton:card:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
<div class="bg-white rounded-lg shadow overflow-hidden" data-skeleton="{{.ID}}">
  {{if .ShowImage}}
  <div class="bg-gray-200 animate-pulse" style="height: {{.ImageHeight}}"></div>
  {{end}}

  <div class="p-4 space-y-3">
    {{if .ShowTitle}}
    <div class="h-5 bg-gray-200 rounded animate-pulse w-3/4"></div>
    {{end}}

    {{if .ShowDescription}}
    <div class="space-y-2">
      {{range $i := .DescriptionLines | printf "%d" | parseInt | seq}}
      <div class="h-3 bg-gray-200 rounded animate-pulse {{if eq $i $.DescriptionLines}}w-1/2{{else}}w-full{{end}}"></div>
      {{end}}
    </div>
    {{end}}

    {{if .ShowFooter}}
    <div class="flex items-center gap-4 pt-2">
      <div class="h-8 w-8 bg-gray-200 rounded-full animate-pulse"></div>
      <div class="flex-1 space-y-2">
        <div class="h-3 bg-gray-200 rounded animate-pulse w-1/3"></div>
        <div class="h-2 bg-gray-200 rounded animate-pulse w-1/4"></div>
      </div>
    </div>
    {{end}}
  </div>
</div>
{{else}}
{{/* Unstyled semantic HTML version */}}
<article data-skeleton="{{.ID}}" class="skeleton-card">
  {{if .ShowImage}}
  <div class="skeleton-image" style="height: {{.ImageHeight}}"></div>
  {{end}}

  <div class="skeleton-body">
    {{if .ShowTitle}}
    <div class="skeleton-title"></div>
    {{end}}

    {{if .ShowDescription}}
    <div class="skeleton-description">
      {{range $i := .DescriptionLines | printf "%d" | parseInt | seq}}
      <div class="skeleton-line"></div>
      {{end}}
    </div>
    {{end}}

    {{if .ShowFooter}}
    <div class="skeleton-footer">
      <div class="skeleton-avatar-small"></div>
      <div class="skeleton-meta"></div>
    </div>
    {{end}}
  </div>
</article>
{{end}}
{{end}}
