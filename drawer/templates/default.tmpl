{{define "lvt:drawer:default:v1"}}
{{if .IsStyled}}
{{/* Tailwind CSS styled version */}}
{{if .Open}}
<div class="fixed inset-0 z-40" data-drawer="{{.ID}}">
  {{/* Overlay */}}
  {{if .ShowOverlay}}
  <div
    class="fixed inset-0 bg-black bg-opacity-50 transition-opacity"
    {{if .CloseOnOverlay}}lvt-click="close_{{.ID}}"{{end}}
    aria-hidden="true"
  ></div>
  {{end}}

  {{/* Drawer panel */}}
  <div
    class="fixed {{.PositionClass}} {{.SizeClass}} bg-white shadow-xl transform transition-transform duration-300 ease-in-out {{.TransformClass}}"
    role="dialog"
    aria-modal="true"
    {{if .HasTitle}}aria-labelledby="drawer-title-{{.ID}}"{{end}}
  >
    {{/* Header */}}
    {{if or .HasTitle .ShowClose}}
    <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200">
      {{if .HasTitle}}
      <h2 id="drawer-title-{{.ID}}" class="text-lg font-semibold text-gray-900">{{.Title}}</h2>
      {{else}}
      <div></div>
      {{end}}
      {{if .ShowClose}}
      <button
        type="button"
        class="p-2 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100"
        lvt-click="close_{{.ID}}"
        aria-label="Close drawer"
      >
        <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
      {{end}}
    </div>
    {{end}}

    {{/* Content - use slot/block in actual usage */}}
    <div class="flex-1 overflow-y-auto p-4">
      {{/* Content is rendered by the parent template using nested template or slot */}}
    </div>
  </div>
</div>
{{end}}
{{else}}
{{/* Unstyled semantic HTML version */}}
{{if .Open}}
<div data-drawer="{{.ID}}">
  {{if .ShowOverlay}}
  <div
    class="overlay"
    {{if .CloseOnOverlay}}lvt-click="close_{{.ID}}"{{end}}
  ></div>
  {{end}}

  <aside role="dialog" aria-modal="true">
    {{if or .HasTitle .ShowClose}}
    <header>
      {{if .HasTitle}}<h2>{{.Title}}</h2>{{end}}
      {{if .ShowClose}}
      <button type="button" lvt-click="close_{{.ID}}" aria-label="Close">Ã—</button>
      {{end}}
    </header>
    {{end}}
    <div class="content">
      {{/* Content slot */}}
    </div>
  </aside>
</div>
{{end}}
{{end}}
{{end}}
